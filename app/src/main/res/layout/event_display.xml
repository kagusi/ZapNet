<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="8dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardBackgroundColor="#e2dcdc">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/event_TitleHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:textSize="20sp"
                    android:text="CSC 174"
                    android:textColor="#151313"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginStart="55dp"/>

                <ImageView
                    android:id="@+id/event_DeleteButton"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.2"
                    android:src="@mipmap/event_delete"
                    android:textAlignment="textEnd"/>

            </LinearLayout>



            <TextView
                android:id="@+id/event_Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="10:30am - 11:40am"
                android:textColor="#151313"
                android:textAlignment="center"
                android:layout_below="@+id/event_TitleHead"/>

            <TextView
                android:id="@+id/event_Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Wegman"
                android:textColor="#151313"
                android:textAlignment="center"
                android:layout_below="@+id/event_Time"/>

            <TextView
                android:id="@+id/event_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Need to attend this class "
                android:textColor="#151313"
                android:textAlignment="center"
                android:layout_below="@+id/event_Location"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
